<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

    <!-- enable asp.net core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <targets>
        <target name="file" xsi:type="File"
                fileName="${basedir}/logs/nlog-all${shortdate}.log"
                layout="${longdate}|${logger}|${level:uppercase=true}|${message} ${exception:format=ToString}"
                keepFileOpen="true"
                encoding="utf-8"/>
        <target name="lifetimeConsole" xsi:type="Console" layout="${MicrosoftConsoleLayout}"  />
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="Microsoft.Hosting.Lifetime" level="Info" writeTo="lifetimeConsole,file" final="true" />
        
        <logger name="Microsoft.*" maxlevel="Info" final="true" />
        <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
        <logger name="*" minlevel="Trace" writeTo="file,lifetimeConsole" />
    </rules>
</nlog>